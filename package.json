{
  "name": "smntc",
  "version": "1.2.0",
  "description": "Semantic Engine for Motion, Animation, and Numerical Topographic Interactivity & Composition. Abstracting WebGL complexity into a Tokenized Intent Schema.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/NAME0x0/SMNTC.git"
  },
  "homepage": "https://github.com/NAME0x0/SMNTC#readme",
  "bugs": {
    "url": "https://github.com/NAME0x0/SMNTC/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "smntc": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./web": {
      "types": "./dist/web/index.d.ts",
      "import": "./dist/web/index.mjs",
      "default": "./dist/web/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "SMNTC-SPEC.md",
    "LICENSE",
    "SECURITY.md",
    "CODE_OF_CONDUCT.md",
    "CHANGELOG.md",
    "llms.txt",
    "llms-full.txt",
    "smntc.schema.json"
  ],
  "scripts": {
    "build": "tsup",
    "analyze": "tsup --analyze",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "size": "size-limit",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "60 KB"
    },
    {
      "path": "dist/react/index.mjs",
      "limit": "70 KB"
    },
    {
      "path": "dist/web/index.mjs",
      "limit": "80 KB"
    }
  ],
  "keywords": [
    "webgl",
    "three.js",
    "shader",
    "topographic",
    "semantic",
    "3d",
    "motion",
    "displacement",
    "generative",
    "procedural",
    "animation",
    "wireframe",
    "wave",
    "react-three-fiber",
    "web-component",
    "shader-material",
    "r3f",
    "semantic-tokens",
    "interactive"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "@react-three/fiber": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.2.1",
    "@types/three": "^0.160.0",
    "size-limit": "^11.1.0",
    "three": "^0.170.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
