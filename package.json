{
  "name": "smntc",
  "version": "1.0.0",
  "description": "Semantic Engine for Motion, Animation, and Numerical Topographic Interactivity & Composition. Abstracting WebGL complexity into a Tokenized Intent Schema.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "SMNTC-SPEC.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/react/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webgl",
    "three.js",
    "shader",
    "topographic",
    "semantic",
    "3d",
    "motion",
    "displacement",
    "generative",
    "procedural",
    "animation",
    "wireframe",
    "wave",
    "react-three-fiber"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "@react-three/fiber": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "three": "^0.170.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
