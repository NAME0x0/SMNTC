{
  "name": "smntc",
  "version": "1.0.0",
  "description": "Semantic Engine for Motion, Animation, and Numerical Topographic Interactivity & Composition. Abstracting WebGL complexity into a Tokenized Intent Schema.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/NAME0x0/SMNTC.git"
  },
  "homepage": "https://github.com/NAME0x0/SMNTC#readme",
  "bugs": {
    "url": "https://github.com/NAME0x0/SMNTC/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "SMNTC-SPEC.md",
    "LICENSE",
    "CHANGELOG.md",
    "llms.txt",
    "llms-full.txt",
    "smntc.schema.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/react/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "webgl",
    "three.js",
    "shader",
    "topographic",
    "semantic",
    "3d",
    "motion",
    "displacement",
    "generative",
    "procedural",
    "animation",
    "wireframe",
    "wave",
    "react-three-fiber"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "@react-three/fiber": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/three": "^0.160.0",
    "three": "^0.170.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
